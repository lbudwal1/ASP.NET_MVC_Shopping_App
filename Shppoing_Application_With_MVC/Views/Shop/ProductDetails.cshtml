@model Shppoing_Application_With_MVC.Models.ViewModel.Shop.ProductVM

@{
    ViewBag.Title = Model.Name;
}

<h2>@Model.Name</h2>
<br />

<div class="row">

    <div class="col-xs-12 col-md-4">
        <img src="/Images/Uploads/Products/@Model.Id/Thumbs/@Model.ImageName"/>
    </div>

    <div class="col-xs-12 col-md-8">
        @Html.DisplayFor(model => model.Description)
        <br />
        $@Html.DisplayFor(model => model.Price)
        <br />

        <div class="addtocart">
            <a href="#" class="addtocart">Add to Cart</a>

            <span class="loader">
                <img src="~/Content/img/ajax-loader.gif" />
            </span>

            <span class="ajaxmsg">
                Product has been Added to your Cart.
            </span>
        </div>
    </div>

</div>

<hr />

<div class="row">

    <h3>Product Gallery</h3>

    <div class="col-xs-12 fancyboxdiv">
        <br /><br />

        @foreach(var image in Model.GalleryImages)
        {
            <div style="display: inline-block">
                <a class="fancybox" rel="gallery1" href="/Images/Uploads/Products/@Model.Id/Thumbs/@image">
                    <img src="/Images/Uploads/Products/@Model.Id/Thumbs/@image" />
                </a>
            </div>
        }
    </div>
</div>

<link href="~/Content/jquery.fancybox.css" rel="stylesheet" />

@section Scripts {
    
<script src="~/Scripts/jquery.fancybox.js"></script>

    <script>
        $(function () {

            /*
            FancyBox
            */
            $(".fancybox").fancybox();
        });

    </script>

    }

